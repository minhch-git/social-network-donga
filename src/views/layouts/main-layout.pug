  body 
    script.
      var userLoggedIn = !{userLoggedInJs};


    .container-fluid
      .row.g-0
        //- Sidebar
        .col-1.offset-md-1.col-lg-2.offset-lg-0
          include ../sidebar.pug

        //- Main
        main.col-11.col-md-9.col-lg-7
          .main_container.boder
            div.title_container 
              span #{pageTitle}
              block headerButton
              
            block content
        //- News
        .d-none.col-lg-3.d-lg-block.sidebarRight
          if sidebarChat
            block sidebarChat
          else 
            include ../sidebarRight.pug 
    
